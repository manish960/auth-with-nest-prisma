generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role?    @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
  USER
}
