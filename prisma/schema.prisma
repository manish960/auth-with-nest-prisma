generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role?    @default(USER)
  createdAt DateTime @default(now())

  doctorProfile DoctorProfile?
  staffProfile  StaffProfile?
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
  USER
}

model Patient {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String?   @unique
  phone       String?
  dateOfBirth DateTime?
  gender      String? // or use enum later
  address     String?

  createdAt DateTime @default(now())

  // Relations
  // appointments Appointment[]
  // invoices     Invoice[]
}

model DoctorProfile {
  id              Int     @id @default(autoincrement())
  userId          Int     @unique
  specialization  String?
  experienceYears Int?
  phone           String?
  roomNumber      String?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])
  // appointments Appointment[]
}

model StaffProfile {
  id       Int     @id @default(autoincrement())
  userId   Int     @unique
  position String?
  phone    String?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
