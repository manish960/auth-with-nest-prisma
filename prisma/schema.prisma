generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role?    @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
  USER
}


model Patient {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String?   @unique
  phone       String?
  dateOfBirth DateTime?
  gender      String?   // or use enum later
  address     String?

  createdAt   DateTime  @default(now())

  // Relations
  // appointments Appointment[]
  // invoices     Invoice[]
}
